%h3#popular.mt-20.text-3xl.font-bold.text-center Most played this month
.mt-8.w-full
  - @mixes.each do |mix|
    %a.px-32.py-2.no-underline.flex.even:bg-gray-100{href: mix_path(slug: mix.slug)}
      .px-2.flex.items-center.gap-1
        - mix.videos.take(2).each do |video|
          %img.w-8.h-5{src: "https://img.youtube.com/vi/#{video.yt_video_id}/0.jpg"}
        - if mix.videos.count > 2
          %span.px-1.text-sm.text-gray-500 + #{mix.videos.count - 2}
      .px-2.grow= mix.name
      -# TODO play count
      .px-2.w-30.text-right.tabular-nums= number_with_delimiter(mix.videos.count)
